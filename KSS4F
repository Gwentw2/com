  ğŸ‘‹ æ­¡è¿ç®¡ç†è€…ï¼š<span id="welcomeUser"></span>
  <button onclick="logout()">ç™»å‡º</button>
</div>

<div id="adminPanel">
  <h3 id="formTitle">âœï¸ æ–°å¢è¡Œç¨‹</h3>
  <input type="time" id="start" step="600">
  <input type="time" id="end" step="600">
  <input type="text" id="title" placeholder="è¡Œç¨‹å…§å®¹">
  <button onclick="addOrUpdateSchedule()">å„²å­˜è¡Œç¨‹</button>
</div>

<script>
  const ADMIN_USERS = {
    "Gwen": "102",
    "songan": "105"
  };

  let currentDate = "";
  let editIndex = -1;

  document.getElementById("date").value = new Date().toISOString().split("T")[0];

  document.getElementById("loginButton").addEventListener("click", login);

  function formatTime(timeStr) {
    let [h, m] = timeStr.split(":");
    h = parseInt(h);
    m = m.padStart(2, "0"); // ç¢ºä¿åˆ†é˜å…©ä½æ•¸
    return `${h}:${m}`;
  }

  function getScheduleData() {
    return JSON.parse(localStorage.getItem("schedules") || "{}");
  }

  function saveScheduleData(data) {
    localStorage.setItem("schedules", JSON.stringify(data));
  }

  function loadSchedule() {
    const date = document.getElementById("date").value;
    currentDate = date;
    const list = document.getElementById("scheduleList");
    const schedules = getScheduleData();
    const todaySchedule = schedules[date] || [];

    list.innerHTML = "";
    if (todaySchedule.length === 0) {
      list.textContent = "é€™ä¸€å¤©æ²’æœ‰è¡Œç¨‹";
      return;
    }

    todaySchedule.forEach((item, index) => {
      const div = document.createElement("div");
      div.className = "event";
      const start = formatTime(item.start);
      const end = formatTime(item.end);
      div.innerHTML = `<strong>${start} åˆ° ${end}</strong> - ${item.title}`;
      if (isLoggedIn()) {
        div.innerHTML += `
          <br>
          <button onclick="startEdit(${index})">ç·¨è¼¯</button>
          <button onclick="deleteSchedule(${index})">åˆªé™¤</button>`;
      }
      list.appendChild(div);
    });
  }

  function login() {
    const user = document.getElementById("username").value.trim();
    const pass = document.getElementById("password").value;

    if (ADMIN_USERS[user] && ADMIN_USERS[user] === pass) {
      localStorage.setItem("loggedInUser", user);
      setLoginUI(user);
      alert(`æ­¡è¿ ${user}ï¼ç™»å…¥æˆåŠŸ`);
    } else {
      alert("å¸³è™Ÿæˆ–å¯†ç¢¼éŒ¯èª¤");
    }
  }

  function logout() {
    localStorage.removeItem("loggedInUser");
    document.getElementById("adminPanel").style.display = "none";
    document.getElementById("loginForm").style.display = "block";
    document.getElementById("welcomeMsg").style.display = "none";
    editIndex = -1;
    loadSchedule();
  }

  function setLoginUI(user) {
    document.getElementById("adminPanel").style.display = "block";
    document.getElementById("loginForm").style.display = "none";
    document.getElementById("welcomeMsg").style.display = "block";
    document.getElementById("welcomeUser").textContent = user;
    loadSchedule();
  }

  function isLoggedIn() {
    return !!localStorage.getItem("loggedInUser");
  }

  function addOrUpdateSchedule() {
    const start = document.getElementById("start").value;
    const end = document.getElementById("end").value;
    const title = document.getElementById("title").value;

    if (!start || !end || !title || !currentDate) {
      alert("è«‹å®Œæ•´å¡«å¯«æ‰€æœ‰æ¬„ä½");
      return;
    }

    const schedules = getScheduleData();
    if (!schedules[currentDate]) schedules[currentDate] = [];

    if (editIndex === -1) {
      schedules[currentDate].push({ start, end, title });
    } else {
      schedules[currentDate][editIndex] = { start, end, title };
      editIndex = -1;
      document.getElementById("formTitle").textContent = "âœï¸ æ–°å¢è¡Œç¨‹";
    }

    saveScheduleData(schedules);
    alert("å„²å­˜æˆåŠŸï¼");
    document.getElementById("start").value = "";
    document.getElementById("end").value = "";
    document.getElementById("title").value = "";
    loadSchedule();
  }

  function deleteSchedule(index) {
    if (!confirm("ç¢ºå®šè¦åˆªé™¤é€™å€‹è¡Œç¨‹ï¼Ÿ")) return;

    const schedules = getScheduleData();
    schedules[currentDate].splice(index, 1);
    saveScheduleData(schedules);
    loadSchedule();
  }

  function startEdit(index) {
    const schedules = getScheduleData();
    const item = schedules[currentDate][index];
    document.getElementById("start").value = item.start;
    document.getElementById("end").value = item.end;
    document.getElementById("title").value = item.title;
    document.getElementById("formTitle").textContent = "ğŸ› ï¸ ç·¨è¼¯è¡Œç¨‹";
    editIndex = index;
  }

  // åˆå§‹åŒ–ç™»å…¥ç‹€æ…‹
  const savedUser = localStorage.getItem("loggedInUser");
  if (savedUser && ADMIN_USERS[savedUser]) {
    setLoginUI(savedUser);
  }

  loadSchedule();
</script>

